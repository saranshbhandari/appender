<configuration scan="true">

    <!-- springProperty bindings you already showed -->
    <springProperty scope="context" name="ELKLoggerSettings_LogLevel" source="ELKLoggerSettings.LogLevel"/>
    <springProperty scope="context" name="ELKLoggerSettings_ELKUrl"  source="ELKLoggerSettings.elkUrl"/>
    <springProperty scope="context" name="ELKLoggerSettings_component" source="ELKLoggerSettings.component"/>
    <springProperty scope="context" name="ELKLoggerSettings_module" source="ELKLoggerSettings.module"/>
    <springProperty scope="context" name="ELKLoggerSettings_EnableELKLogging" source="ELKLoggerSettings.EnableELKLogging"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %logger{36} - %msg %n</pattern>
        </encoder>
    </appender>

    <!-- Our custom HTTP poster (single-flight inside) -->
    <appender name="HTTP" class="com.yourco.logging.appenders.ELKLogAppender">
        <logLevel>${ELKLoggerSettings_LogLevel}</logLevel>
        <elkUrl>${ELKLoggerSettings_ELKUrl}</elkUrl>
        <component>${ELKLoggerSettings_component}</component>
        <module>${ELKLoggerSettings_module}</module>
        <EnableELKLogging>${ELKLoggerSettings_EnableELKLogging}</EnableELKLogging>

        <!-- tuning knobs -->
        <connectTimeoutMs>2000</connectTimeoutMs>
        <readTimeoutMs>2000</readTimeoutMs>
        <queueSize>1000</queueSize>
        <drainIntervalMs>300</drainIntervalMs>
        <maxRetries>2</maxRetries>
        <baseBackoffMs>200</baseBackoffMs>
        <sendAsync>true</sendAsync>
    </appender>

    <!-- Wrap in Logback's async to keep caller threads fast; includeCallerData not needed -->
    <appender name="ASYNC_HTTP" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="HTTP"/>
        <queueSize>1000</queueSize>
        <neverBlock>true</neverBlock>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_HTTP"/>
    </root>
</configuration>
